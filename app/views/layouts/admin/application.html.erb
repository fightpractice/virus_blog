<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>VirusBlog</title>
    <meta name="description" content="overview &amp; stats" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'admin/admin', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin/admin_head', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="no-skin">
    <%= render "layout_shares/admin/navbar" %>

    <div class="main-container ace-save-state" id="main-container">
      <%= javascript_include_tag 'admin/main_container', 'data-turbolinks-track': 'reload' %>
      <div id="sidebar" class="sidebar                  responsive                    ace-save-state">
        <%= javascript_include_tag 'admin/sidebar', 'data-turbolinks-track': 'reload' %>
        <%= render "layout_shares/admin/sidebar_shortcuts" %>
        <%= render "layout_shares/admin/nav_list" %>
      </div>
      <div class="main-content">
        <div class="main-content-inner">
          <%= yield %>
        </div>

      </div>
      <%= render "layout_shares/admin/footer" %>
    </div>


    <%= javascript_include_tag 'admin/admin', 'data-turbolinks-track': 'reload' %>


    <% content_for :extro_scripts do %>
      <%#= javascript_include_tag "admin/form" %>
      <%#= javascript_include_tag 'admin/custom', 'data-turbolinks-track': 'reload' %>
    <% end %>

    <%= content_for?(:extro_scripts) ? yield(:extro_scripts) : '' %>
  </body>
</html>

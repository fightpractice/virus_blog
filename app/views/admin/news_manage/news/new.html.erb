<%= render("admin/news_manage/shares/header_breadcrumb") %>
<div class="page-content">
  <%= render("layout_shares/admin/setting_container") %>

  <div class="page-header">
    <h1>
      文章管理
      <small>
        <i class="ace-icon fa fa-angle-double-right"></i>
        写文章
      </small>
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <%= render("layout_shares/admin/alert") %>
      <!-- PAGE CONTENT BEGINS -->
      <%= form_for @article, url: admin_news_manage_news_index_path, html:{class: "form-horizontal" } do |f| %>

        <%= render partial: "admin/form_shares/f_chosen_select", locals: {f:f,field:"category_id",options: @categories.collect{|c|[c.name,c.id]},placeholder: "请选择分类", required:"true",selected: nil } %>

        <%= render partial: "admin/form_shares/f_text_field", locals: {f:f,field: "title", placeholder: "请输入资讯标题", required:"true"} %>

        <%= render partial: "admin/form_shares/f_long_text_field", locals: {f:f,field: "desp", placeholder: "请输入资讯副标题", required:""} %>

        <%= render partial: "admin/form_shares/editor", locals: {f:f,model:"article",field: "content", value: ""} %>

        <%= render partial: "admin/form_shares/f_tag_field", locals: {f:f,field: "tags",value: [].join(","),placeholder: "请输入标签"} %>

        <%= render partial: "admin/form_shares/f_on_or_off_switches", locals: {f:f,field:"status"} %>



        <div class="clearfix form-actions">
          <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-info" type="submit">
              <i class="ace-icon fa fa-check bigger-110"></i>
              提交
            </button>

            &nbsp; &nbsp; &nbsp;
            <button class="btn" type="reset">
              <i class="ace-icon fa fa-undo bigger-110"></i>
              重置
            </button>
          </div>
        </div>

        <div class="hr hr-24"></div>
      <% end %>



    </div><!-- /.col -->
  </div><!-- /.row -->
</div><!-- /.page-content -->

<%= render("admin/form_shares/f_js") %>